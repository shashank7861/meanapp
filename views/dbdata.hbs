<div class="container">
	<h1>Data</h1>
	<div class="row">
		<div class="col-lg-12">
			<table class="table table-hover table-bordered" width="100%">
		      <tr><th>Title</th><th>Content</th><th>Author</th><th>Date</th><th>Published</th></tr>
		      {{# each post}}
		      <tr>
		        <td>{{this.title}}</td><td><p class="text-justify">{{this.data}}</p></td><td>{{this.author}}</td><td>{{this.createdAt}}</td><td>{{this.published}}</td>
		      </tr>
		      {{/each}}
		    </table>
		</div>
	</div>
</div>
