<div class="container">
  <h1>{{ title }}</h1>
    <div class="row">
      <div class="col-md-12">
        <h3>Basic Information</h3>
        <hr>
        <div class="row">
          <div class="col-lg-6">
            <div class="form-group">
                Name<label class="form-control" type="text" id="name" value="" name="name">{{session.name}}</label>
            </div>
          </div>
          <div class="col-lg-6">
            <div class="form-group">
                Contact<label class="form-control" type="text" id="name" value="" name="name">{{session.contact}}</label>
            </div>
          </div>
        </div>
        <div class="form-group">
            Email<label class="form-control" type="text" id="name" value="" name="name">{{session.email}}</label>
        </div>
        <form class="form" action="/create-profile" method="post">
          <h3>Personal Details</h3>
          <hr>
          <div class="row">
            <div class="col-lg-6">
              <div class="form-group">
                  Address<textarea class="form-control" id="address" name="address" cols="2" rows="5"></textarea>
              </div>
            </div>
            <div class="col-lg-6">
              <div class="form-group">
                  City<input class="form-control" id="contact" name="city" cols="2" rows="5">
              </div>
              <div class="form-group">
                  State<input class="form-control" id="contact" name="state" cols="2" rows="5">
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-lg-6">
              <div class="form-group">
                  Country<input class="form-control" id="counrty" name="counrty" cols="2" rows="5">
              </div>
            </div>
            <div class="col-lg-6">
              <div class="form-group">
                  Pin Code<input class="form-control" id="pin" name="pin" cols="2" rows="5">
              </div>
            </div>
          </div>
          <button class="btn btn-success" type="submit">Update</button>
        </form>
      </div>

    </div>
</div>
